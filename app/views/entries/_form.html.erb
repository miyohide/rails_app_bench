<%= form_for(@entry) do |f| %>
   <%= render 'shared/error_messages', object: f.object %>

   <div class="field">
      <%= f.label :title %><br>
      <%= f.text_field :title %>
   </div>
   <div class="field">
      <%= f.label :body %><br>
      <%= f.text_area :body %>
   </div>
   <div class="field">
      <%= f.label :tag_list, "Tags (separated by commas)" %><br>
      <%= f.text_field :tag_list %>
   </div>
   <div class="actions">
      <%= f.submit %>
   </div>
<% end %>
